<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <CheckBox
        android:id="@+id/checkBoxRead"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Read"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/checkBoxWrite"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <CheckBox
        android:id="@+id/checkBoxWrite"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Write"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/checkBoxExecute"
        app:layout_constraintLeft_toRightOf="@id/checkBoxRead"
        />

    <CheckBox
        android:id="@+id/checkBoxExecute"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Execute"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/checkBoxWrite"
        />
</androidx.constraintlayout.widget.ConstraintLayout>