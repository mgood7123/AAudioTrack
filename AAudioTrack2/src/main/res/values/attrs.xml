<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ImageProgressBar">
        <attr name="progress_value" format="integer" />
        <attr name="progress_max" format="integer" />
        <!-- A drawable to use as the background for the progress bar.
             This can be either a reference to a full drawable resource
             (such as a PNG image, 9-patch, XML state list description, etc),
             or a solid color such as "#ff000000" (black). -->
        <attr name="progress_background" format="reference|color" />
        <attr name="progress_orientation" format="integer" >
            <enum name="vertical" value="0" />
            <enum name="horizontal" value="1" />
            <enum name="vertical_flipped" value="2" />
            <enum name="horizontal_flipped" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="FileView">
        <attr name="android:textSize" format="dimension" />
        <attr name="android:textColor" format="color" />
        <!-- A drawable to use as the background.  This can be either a reference
             to a full drawable resource (such as a PNG image, 9-patch,
             XML state list description, etc), or a solid color such as "#ff000000"
            (black). -->
        <attr name="android:background" format="reference|color" />
        <attr name="chevronColor" format="color" />
    </declare-styleable>

    <attr name="autoResizeMode" format="integer" >
        <!-- resizes text to both height and width. -->
        <enum name="width" value="0"/>
        <!-- resizes text to height only. -->
        <enum name="height" value="1" />
        <!-- resizes text to height only, adding an ellipsis "..." if the text is too long. -->
        <enum name="heightWithEllipsis" value="2" />
    </attr>

    <declare-styleable name="SingleLineAutoSizeTextView">
        <attr name="autoResizeMode" />
    </declare-styleable>

    <declare-styleable name="SingleLineAutoSizeEditText">
        <attr name="autoResizeMode" />
    </declare-styleable>

    <declare-styleable name="example">
        <attr name="autoResizeMode" />
    </declare-styleable>
</resources>